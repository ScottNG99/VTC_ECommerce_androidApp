<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="4.5"
            android:id="@+id/collectscore"
            android:visibility="gone"
            android:textFontWeight="560"
            android:fontFamily="@font/dm_sans"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collectimgtwo"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dsads"
            android:visibility="gone"
            android:id="@+id/collectdesc"/>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/cardviewtwo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_height="180dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/collectproduct"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/notebok" />

                <ImageView
                    android:id="@+id/collecticon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/heart" />

            </RelativeLayout>





        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/collectname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/dm_sans"
            android:text="Apple MacBook"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1521"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/black"
            android:id="@+id/collectprice"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textFontWeight="700"/>





    </LinearLayout>

</RelativeLayout>