<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_rounded_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textFontWeight="500"
        android:fontFamily="@font/dm_sans"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textFontWeight="500"
        android:fontFamily="@font/dm_sans"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/customerSpinnerLayouttwo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:hint="Please select Category">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/filtercategoryTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            tools:ignore="KeyboardInaccessibleWidget" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Range"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textFontWeight="500"
        android:fontFamily="@font/dm_sans"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input"
            android:hint="Lowest Price"
            android:id="@+id/edtLowestPrice"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:inputType="number"/>

        <View
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:layout_below="@+id/r1"
            android:layout_gravity="center_vertical"

            android:background="#dfdfdf" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input"
            android:hint="Highest Price"
            android:layout_weight="1"
            android:id="@+id/edthighestprice"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:inputType="number"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_addcart"
            android:text="Reset"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/resetDialog"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:layout_marginBottom="47dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_addcart"
            android:text="Finish"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/finishDialog"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:layout_marginBottom="47dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            />


    </LinearLayout>





</LinearLayout>