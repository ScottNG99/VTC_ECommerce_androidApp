<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/loginbg"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:text="E-Shop"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="280dp"
            android:lineHeight="35dp"
            android:textFontWeight="600"
            android:textSize="35sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditProfileTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="Enter Your Student Number"

            app:endIconMode="clear_text"
            app:endIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:background="@drawable/login_input"
                android:layout_height="60dp"
                android:id="@+id/edtlogin"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditProfileTextInputLayoutStyle"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="Enter Account Password"

            app:endIconMode="password_toggle"
            app:endIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:background="@drawable/login_input"
                android:layout_height="60dp"
                android:id="@+id/edtpassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:lineSpacingExtra="7sp"
            android:textSize="14sp"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textFontWeight="500">

        </TextView>

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_login_color_black"
            android:hint="Sign in"
            android:textColorHint="@color/white"/>


        <Button
            android:id="@+id/toregister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_login_color_black"
            android:hint="I don't have ad account"
            android:textColorHint="@color/white"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:visibility="gone"
        android:gravity="right">

        <ImageView
            android:id="@+id/hiddenpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"

            android:background="@drawable/ic_baseline_remove_red_eye_24" />

    </LinearLayout>




</LinearLayout>