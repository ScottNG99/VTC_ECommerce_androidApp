<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/appicon"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:text="Login to "
            android:textColor="#0C1A30"

            android:layout_marginTop="20dp"
            android:lineHeight="35dp"
            android:textFontWeight="700"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:text="E-Shop"
            android:textColor="#95C740"

            android:layout_marginTop="20dp"
            android:lineHeight="35dp"
            android:textFontWeight="700"
            android:textSize="25sp" />




    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back"
        android:lineSpacingExtra="7sp"
        android:textSize="14sp"
        android:fontFamily="@font/dm_sans"
        android:textColor="#838589"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textFontWeight="400">

    </TextView>



    <TextView

        android:layout_width="325dp"
        android:layout_height="19dp"
        android:text="CNA"
        android:textColor="#0C1A30"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.89sp"
        android:gravity="top"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:fontFamily="@font/dm_sans"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"

        />

    <EditText
        android:id="@+id/edtlogin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_input"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Enter Your Student Number"
        android:gravity="center_vertical"
        android:textColor="#0C1A30"
        android:paddingLeft="16dp"
        android:textColorHint="#C4C5C4"/>



    <TextView

        android:layout_width="325dp"
        android:layout_height="19dp"
        android:text="Password"
        android:textColor="#0C1A30"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.89sp"
        android:gravity="top"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:fontFamily="@font/dm_sans"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"

        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtpassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/login_input"
            android:hint="Enter Account Password"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:textColor="#0C1A30"
            android:textColorHint="#C4C5C4"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="right">

            <ImageView
                android:id="@+id/hiddenpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"

                android:background="@drawable/ic_baseline_remove_red_eye_24" />

        </LinearLayout>




    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:lineSpacingExtra="7sp"
        android:textSize="14sp"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/black"
        android:gravity="right"
        android:visibility="gone"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textFontWeight="500">

    </TextView>

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn_login_color_black"
        android:hint="Sign in"
        android:textColorHint="@color/white"/>


    <Button
        android:id="@+id/toregister"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn_login_color_black"
        android:hint="I don't have an account"
        android:textColorHint="@color/white"/>

    <ProgressBar
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:lineSpacingExtra="7sp"
            android:textSize="14sp"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            android:textFontWeight="700">

        </TextView>
    </LinearLayout>
















</LinearLayout>