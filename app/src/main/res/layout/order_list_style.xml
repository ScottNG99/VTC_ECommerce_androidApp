<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/ordercardviews"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/orderimage"
                    android:layout_width="150dp"
                    android:src="@drawable/notebok"
                    android:layout_height="160dp" />





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/Orderpname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="22dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="Apple MacBook"
                        android:lines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="18sp" />




                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Orderprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="$1521"
                        android:textColor="@color/black"
                        android:textFontWeight="700"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/orderProductQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:paddingRight="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_toEndOf="@+id/Orderprice"
                        android:text="X2"
                        android:textColor="@color/black"
                        android:textFontWeight="700"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/goodsCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="11dp"
                        android:layout_marginRight="22dp"
                        android:layout_toRightOf="@+id/Orderprice"
                        android:fontFamily="@font/dm_sans"
                        android:gravity="right"
                        android:text="X2"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="17sp" />




                </RelativeLayout>



            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>












</RelativeLayout>