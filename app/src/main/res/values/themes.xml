<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VTC_ECommerce_androidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/shrine_blue_100</item>
        <item name="colorOnSurfaceVariant">@color/shrine_blue_900</item>
    </style>

    <style name="Theme.VTC_ECommerce_androidApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VTC_ECommerce_androidApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VTC_ECommerce_androidApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
     <!--this below -->

    <style name="Theme.App" parent="Theme.Material3.DayNight">
        ...
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Theme.Material3.DayNight">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="Theme.Material3.DayNight">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/shrine_blue_900</item>
    </style>


    <style name="EditProfileTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#101010</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

</resources>